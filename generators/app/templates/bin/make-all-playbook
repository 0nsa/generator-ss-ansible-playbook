#!/usr/bin/env python
# -*- coding: utf-8 -*-

import os
import sys

import yaml

sys.path.append(os.path.abspath(os.path.join(
    os.path.dirname(__file__), "..", "lib")))

from make_all_playbook import AllPlaybook  # noqa: E402


def main():
    with open(os.path.join(os.path.dirname(__file__), "..", "cfg.yml")) as r:
        cfg = yaml.load(r)
    all_playbook = AllPlaybook(cfg)
    all_playbook.run()


if __name__ == "__main__":
    main()
