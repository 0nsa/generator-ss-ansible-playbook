#!/usr/bin/env python
# -*- coding: utf-8 -*-

import os
import sys

import yaml

sys.path.append(os.path.abspath(os.path.join(
    os.path.dirname(__file__), "..", "lib")))

from make_sshcfg import SSHCfg  # noqa: E402


def main():
    with open(os.path.join(os.path.dirname(__file__), "..", "cfg.yml")) as r:
        cfg = yaml.load(r)
    sshcfg = SSHCfg(cfg)
    data = sshcfg.load_yaml()
    sshcfg.write_sshcfg(data)


if __name__ == "__main__":
    main()
