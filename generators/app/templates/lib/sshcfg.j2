# This file should be included in .gitignore.
{% for env, env_data in data.items() %}
  {% for group_name, group_data in env_data.groups.items() %}
    {% for idx, host_data in group_data.hosts.items() %}
      {% if group_data.vars.user %}
Host {{group_name}}-{{idx}}.{{env}}
  HostName {{host_data.ip}}
  User {{ group_data.vars.user }}
  IdentityFile ssh-keys/{{group_name}}.{{env}}
  UserKnownHostsFile ssh-keys/known_hosts
      {% endif %}
    {% endfor %}
  {% endfor %}
{% endfor %}
